        { "value": "slate", "label": "Slate" },
        { "value": "flat_membrane", "label": "Flat/Membrane" },
        { "value": "cedar_shake", "label": "Cedar Shake" },
        { "value": "synthetic", "label": "Synthetic" },
        { "value": "tpo", "label": "TPO" },
        { "value": "epdm", "label": "EPDM" },
        { "value": "built_up", "label": "Built-Up (BUR)" }
      ]
